<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PediatricaUI.ImagePages.WDermatit"
             Title="W - дерматит">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="SingleImageStyle" TargetType="Image">
                <Setter Property="Margin" Value="20,20,20,20"/>
            </Style>
            <Style x:Key="ImageLabelStyle" TargetType="Label">
                <Setter Property="Margin" Value="15"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
            <Image Style="{StaticResource SingleImageStyle}" Source="w_dermatit.jpg"/>
            <Label Style="{StaticResource ImageLabelStyle}">
                На фотографии показан пеленочный дерматит вследствие раздражения ("W-дерматит").
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>