<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PediatricaUI.ImagePages.BacterialTraheitEndoscope"
             Title="Бактериальный трахеит (эндоскопия)">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="SingleImageStyle" TargetType="Image">
                <Setter Property="Margin" Value="20,20,20,20"/>
            </Style>
            <Style x:Key="ImageLabelStyle" TargetType="Label">
                <Setter Property="Margin" Value="15"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="starForFavourites" Text="Добавить в избранное" Clicked="ToolbarItem_Clicked" IconImageSource="star_before.png"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout>
            <Image Style="{StaticResource SingleImageStyle}" Source="bacterial_tracheitis_endoscope.jpg"/>
            <Label Style="{StaticResource ImageLabelStyle}">
                Данное изображение показывает эндоскопическое изображение трахеи, на котором видно воспалительный экссудат, характерный для бактериального трахеита.</Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>