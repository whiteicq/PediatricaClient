<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PediatricaUI.Resources.Styles.ExpanderContentStyle">
    
    <Style x:Key="ExpanderContentStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="MinimumHeightRequest" Value="60"/>
        <Setter Property="Padding" Value="30,16,0,16"/>
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="TextColor" Value="#8F8282"/>
        <Setter Property="LineBreakMode" Value="WordWrap"/>

    </Style>
</ResourceDictionary>